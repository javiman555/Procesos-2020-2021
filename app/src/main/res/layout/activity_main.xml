<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pantallainicio"
    android:backgroundTintMode="screen"
    android:foregroundTintMode="add"
    android:orientation="horizontal"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/botonAjustes"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:layout_gravity="end"
        android:layout_marginStart="0dp"
        android:visibility="visible"
        app:srcCompat="@drawable/botonajustes" />

    <ImageView
        android:id="@+id/ivBoton"
        android:layout_width="49dp"
        android:layout_height="56dp"
        android:layout_gravity="end"
        android:layout_marginStart="679dp"
        android:src="@drawable/botonsalir"
        android:visibility="visible" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="#313435"
        android:backgroundTint="#313435"
        android:src="@drawable/iconovirus" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="NOMBREAPP"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:drawableTint="#050505" />

    <ImageView
        android:id="@+id/ajustesFondo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        app:srcCompat="@drawable/ajustesfondo" />

    <Button
        android:id="@+id/botonjugar"
        android:layout_width="156dp"
        android:layout_height="96dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#000000"
        android:clickable="true"
        android:text="JUGAR"
        android:textColor="#FFFFFF"
        android:textSize="36sp" />

</RelativeLayout>