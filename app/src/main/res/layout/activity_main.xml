<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pantallainicio"
    android:backgroundTintMode="screen"
    android:foregroundTintMode="add"
    android:orientation="horizontal"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/botonAjustes"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:layout_gravity="end"
        android:layout_marginEnd="0dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:visibility="visible"
        app:srcCompat="@drawable/botonajustes" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="130dp"
        android:layout_x="400dp"
        android:layout_y="133dp"
        android:background="#313435"
        android:backgroundTint="#313435"
        android:src="@drawable/iconovirus" />

    <ImageView
        android:id="@+id/ivBoton"
        android:layout_width="49dp"
        android:layout_height="56dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="end"
        android:layout_marginEnd="0dp"
        android:layout_x="762dp"
        android:layout_y="-1dp"
        android:src="@drawable/botonsalir"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_weight="1"
        android:layout_x="357dp"
        android:layout_y="97dp"
        android:text="NOMBREAPP"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:drawableTint="#050505" />

    <ImageView
        android:id="@+id/ajustesFondo"
        android:layout_width="858dp"
        android:layout_height="521dp"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:layout_x="-42dp"
        android:layout_y="-36dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ajustesfondo" />

    <Button
        android:id="@+id/botonjugar"
        android:layout_width="156dp"
        android:layout_height="80dp"
        android:layout_x="332dp"
        android:layout_y="250dp"
        android:backgroundTint="#000000"
        android:clickable="true"
        android:text="JUGAR"
        android:textColor="#FFFFFF"
        android:textSize="36sp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="770dp"
        android:layout_y="315dp"
        app:srcCompat="@drawable/info" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="820dp"
        android:layout_height="495dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/infofondo" />

</AbsoluteLayout>