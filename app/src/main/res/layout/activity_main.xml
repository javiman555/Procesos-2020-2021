<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pantallainicio"
    android:backgroundTintMode="screen"
    android:foregroundTintMode="add"
    android:orientation="horizontal"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:background="#313435"
        android:backgroundTint="#313435"
        android:src="@drawable/iconovirus" />

    <ImageView
        android:id="@+id/ivBoton"
        android:layout_width="583dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:layout_marginEnd="0dp"
        android:src="@drawable/boton"
        android:visibility="visible" />

</LinearLayout>